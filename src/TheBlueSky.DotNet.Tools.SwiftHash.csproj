<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>dotnet-hash</ToolCommandName>
    <RootNamespace>TheBlueSky.DotNet.Tools.SwiftHash</RootNamespace>
    <AssemblyName>TheBlueSky.DotNet.Tools.SwiftHash</AssemblyName>
  </PropertyGroup>

  <PropertyGroup>
    <Product>TheBlueSky.DotNet.Tools.SwiftHash</Product>
    <Description>A simple dotnet tool to calculate hashes of the given file</Description>
    <Authors>Essam Almohammadi</Authors>
    <Company>TheBlueSky.Net</Company>
    <Copyright>Â© 2018 TheBlueSky.Net</Copyright>
    <NeutralLanguage>en-GB</NeutralLanguage>
    <AssemblyVersion>1.0.0</AssemblyVersion>
    <FileVersion>$(AssemblyVersion)</FileVersion>
    <AssemblyInformationalVersion>1.0 RTM</AssemblyInformationalVersion>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>TheBlueSky.DotNet.Tools.SwiftHash</PackageId>
    <PackageVersion>$(AssemblyVersion)</PackageVersion>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageProjectUrl>https://github.com/TheBlueSky/dotnet-hash</PackageProjectUrl>
    <PackageLicenseUrl>$(PackageProjectUrl)/blob/master/LICENSE.txt</PackageLicenseUrl>
    <RepositoryUrl>https://github.com/TheBlueSky/dotnet-hash.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>MD5;SHA-1;SHA-256;SHA-384;SHA-512</PackageTags>
  </PropertyGroup>

  <PropertyGroup>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="McMaster.Extensions.CommandLineUtils" Version="2.3.4" />
  </ItemGroup>

</Project>
